---
import type { MarkdownLayoutProps } from "astro";
import type Frontmatter from "../types/frontmatter";
import { Image } from "@astrojs/image/components";
import { parseIconURL } from "../lib/utils";

import BaseLayout from "./BaseLayout.astro";
import Back from "../components/Back.astro";

import "../styles/markdown.css";

type Props = MarkdownLayoutProps<Frontmatter>;

const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.name}>
  <main class="markdown-container">
    <Back />
    <span class="unit-logo">
      <Image
        src={parseIconURL(frontmatter.icon)}
        alt={`${frontmatter.name}'s icon.`}
        width={300}
        aspectRatio="4:3"
        draggable="false"
      />
    </span>
    <slot />
  </main>
</BaseLayout>
