---
import Contact from "../components/Contact.astro";
import type Frontmatter from "../types/frontmatter";
import Layout from "./Layout.astro";

const { frontmatter } = Astro.props;

const properties = frontmatter as Frontmatter;
---

<Layout title={properties.title}>
  <main>
    <img
      class="unit-logo"
      src={`/images/${properties.icon}`}
      alt={`${properties.title}'s logo.'`}
    />
    <h1>{properties.title.toLocaleUpperCase()}</h1>
    <slot />
    <Contact email={properties.email} name={properties.title} />
  </main>
</Layout>

<style>
  main {
    margin: 2em 0;
  }
  .unit-logo {
    width: 12em;
  }
</style>
